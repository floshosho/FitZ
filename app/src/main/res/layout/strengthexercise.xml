<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/strength_header"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:paddingTop="20dp"
        android:layout_centerHorizontal="true"

        android:text="@string/strength_workout"> </TextView>

    <ImageView
        android:id="@+id/FullBody"
        android:layout_width="115dp"
        android:layout_height="78dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/strength_header"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/UpperBody"
        android:layout_width="115dp"
        android:layout_height="78dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/FullBody"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
    <ImageView
        android:id="@+id/LowerBody"
        android:layout_width="115dp"
        android:layout_height="78dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/UpperBody"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageView
        android:id="@+id/QuickWorkout"
        android:layout_width="115dp"
        android:layout_height="78dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/LowerBody"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />


</RelativeLayout>